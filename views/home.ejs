<html>
    <head>
        <title>
            <%= locals.title%>
        </title>
        <script src="https://kit.fontawesome.com/06901f6e77.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            MY CONTACTS
        </h1>
        <div id="contacts-list-container">
            <ul>
                   
                <% for (let i of contact_list) { %> 
                    
                    <li class="contact">
                     <div class="details">
                          <p><%= i.name %></p>
                            <p><%= i.number %></p>
                     </div>  
                     <div class="delete button">
                        <a href="/delete-contact/?id=<%=i._id%>">
                            <i class="fa-solid fa-ban"> </i>
                        </a>

                     </div>   
                    </li>

                    
                <% } %>
            </ul>
        </div>

        <form id="new-contact-form" action="/create-number" method="POST">
            <input type="text" name="name" placeholder="Enter name" required>
            <input type="number" name="number" placeholder="Enter phone" required>
            <button type="submit">Add contact</button>
        </form>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>